<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500" prefWidth="450" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateCustomer">
   <children>
      <Label layoutX="108.0" layoutY="42.0" text="Update Customer">
         <font>
            <Font size="30.0" />
         </font></Label>
      <TextField fx:id="updateCustomerPhone" layoutX="42.0" layoutY="349.0" promptText="Phone Number" />
      <TextField fx:id="updateCustomerName" layoutX="42.0" layoutY="198.0" promptText="Name" />
      <TextField fx:id="updateCustomerAddress" layoutX="42.0" layoutY="250.0" promptText="Address" />
      <TextField fx:id="updateCustomerZip" layoutX="42.0" layoutY="300.0" promptText="Postal Code" />
      <TextField fx:id="updateCustomerId" editable="false" layoutX="42.0" layoutY="146.0" promptText="ID - Auto Generated" />
      <ComboBox fx:id="stateProvince" layoutX="251.0" layoutY="198.0" prefWidth="150.0" promptText="State/Province" />
      <ComboBox fx:id="updateCustomerCountry" layoutX="251.0" layoutY="146.0" onAction="#onCustomerCountry" prefWidth="150.0" promptText="Country" />
      <Button fx:id="updateButton" layoutX="98.0" layoutY="429.0" mnemonicParsing="false" onAction="#onUpdate" text="Update" />
      <Button fx:id="cancelButton" layoutX="300.0" layoutY="429.0" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
   </children>
</AnchorPane>
